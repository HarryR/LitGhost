{
  "name": "@monorepo/core",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./sandboxed": {
      "types": "./dist/index.d.ts",
      "default": "./dist/sandboxed.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build && vite build --mode sandboxed && tsc --emitDeclarationOnly --declaration --outDir dist",
    "typecheck": "pnpm build"
  },
  "devDependencies": {
    "@ethersproject/sha2": "5.7.0",
    "@ethersproject/abi": "5.7.0",
    "@ethersproject/bytes": "5.7.0",
    "@ethersproject/keccak256": "5.7.0",
    "@ethersproject/random": "5.7.0",
    "@ethersproject/signing-key": "5.7.0",
    "@ethersproject/contracts": "5.7.0",
    "@types/node": "^24.7.0",
    "typescript": "^5.7.3",
    "vite": "^6.0.5"
  },
  "peerDependencies": {
    "@ethersproject/sha2": "5.7.0",
    "@ethersproject/abi": "5.7.0",
    "@ethersproject/bytes": "5.7.0",
    "@ethersproject/keccak256": "5.7.0",
    "@ethersproject/random": "5.7.0",
    "@ethersproject/signing-key": "5.7.0",
    "@ethersproject/contracts": "5.7.0"
  }
}
