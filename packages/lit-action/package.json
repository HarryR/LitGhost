{
  "name": "@monorepo/lit-action",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite build --watch --mode development",
    "dev:server": "tsx src/test-server/index.ts",
    "build": "pnpm clean && pnpm build:dev && pnpm build:prod",
    "build:dev": "vite build --mode development",
    "build:prod": "vite build --mode production",
    "test": "vitest --run",
    "test:ui": "vitest --ui",
    "clean": "rm -rf dist",
    "bootstrap": "pnpm build && tsx scripts/bootstrap.ts --network datil-dev --mode development --output bootstrap-development.json --debug"
  },
  "devDependencies": {
    "@lit-protocol/auth-helpers": "7.3.0",
    "@lit-protocol/constants": "7.3.0",
    "@lit-protocol/contracts-sdk": "7.3.0",
    "@lit-protocol/lit-node-client": "7.3.0",
    "@types/express": "^5.0.0",
    "@types/node": "^24.7.0",
    "@types/supertest": "^6.0.2",
    "@vitest/ui": "^2.1.8",
    "ethers": "5.7.0",
    "express": "^4.21.2",
    "ipfs-only-hash": "^4.0.0",
    "supertest": "^7.0.0",
    "terser": "^5.36.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vite": "^6.0.5",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "@monorepo/core": "workspace:*",
    "dotenv": "^17.2.3",
    "form-data": "^4.0.4",
    "pinata": "^2.5.1"
  }
}
