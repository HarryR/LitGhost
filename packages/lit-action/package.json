    "@types/supertest": "^6.0.2",
    "@vitest/ui": "^2.1.8",
    "ethers": "5.7.0",
    "express": "^4.21.2",
    "ipfs-only-hash": "^4.0.0",
    "supertest": "^7.0.0",
    "terser": "^5.36.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vite": "^6.0.5",
